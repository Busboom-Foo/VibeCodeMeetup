    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2015",
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*"]
}
